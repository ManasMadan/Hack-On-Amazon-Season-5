{
  "name": "@repo/ui",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css",
    "./button": {
      "import": "./dist/components/ui/button.js",
      "require": "./dist/components/ui/button.js",
      "types": "./dist/components/ui/button.d.ts"
    },
    "./dropdown-menu": {
      "import": "./dist/components/ui/dropdown-menu.js",
      "require": "./dist/components/ui/dropdown-menu.js",
      "types": "./dist/components/ui/dropdown-menu.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && cp src/styles.css dist/styles.css"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@repo/tailwind-config": "*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.516.0",
    "react": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
}

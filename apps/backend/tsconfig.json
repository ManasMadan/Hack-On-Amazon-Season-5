{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/routes/*": ["./src/routes/*"],
      "@/trpc/*": ["./src/trpc/*"],
      "@/trpc": ["./src/trpc/trpc"],
      "@/utils/*": ["./src/utils/*"],
      "@repo/database/*": ["packages/database/*"]
    },
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
